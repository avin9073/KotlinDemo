<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login_back_image"
                android:background="@color/white"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="0.88">

            <com.example.DemoShopping.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_delivery"
                android:text="Black Men Body Suit"
                android:textColor="@color/black"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_3sdp">

                <com.example.DemoShopping.ui.customview.CustomTextview
                    android:id="@+id/tv_item_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1266.25"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <com.example.DemoShopping.ui.customview.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_item_oldprice_text"
                    android:text="1687.6"
                    android:background="@drawable/strike_through"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginStart="@dimen/_8sdp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_tbox"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="+"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_tbox"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="-"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_tbox"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_60sdp"
                    app:srcCompat="@drawable/delete"
                    app:tint="@color/black" />


            </LinearLayout>



        </LinearLayout>




    </LinearLayout>

</layout>