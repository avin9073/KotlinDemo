<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.example.privatelyurs.ui.fragment.orderdetails.OrderDetailsViewModel" />
    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:id="@+id/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp"
        android:background="@color/white">

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textColor="@color/pink"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_2sdp"/>

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="on 12 Feb,2021"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_2sdp"/>

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Id"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_13sdp"/>

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:paddingTop="@dimen/_10sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_80sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/login_back_image"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.88">

                <com.example.privatelyurs.ui.customview.CustomTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_item_name"
                    android:text="@string/name"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_3sdp">

                    <com.example.privatelyurs.ui.customview.CustomTextview
                        android:id="@+id/tv_item_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <com.example.privatelyurs.ui.customview.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_item_oldprice_text"
                        android:text="@string/old_price"
                        android:background="@drawable/strike_through"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginStart="@dimen/_8sdp"/>

                </LinearLayout>

                <com.example.privatelyurs.ui.customview.CustomTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_item_disc_text"
                    android:text="@string/discount"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_3sdp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Locations"
            android:paddingTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/roundedAddressImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/login_back_image"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

                <com.example.privatelyurs.ui.customview.CustomTextview
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_address"
                    android:text="@string/name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.privatelyurs.ui.customview.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="@dimen/_12sdp"
            android:paddingTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.example.privatelyurs.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:textSize="@dimen/_12sdp"
                android:layout_weight=".90"/>

            <com.example.privatelyurs.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1266.25"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_weight=".10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.example.privatelyurs.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping"
                android:textSize="@dimen/_12sdp"
                android:layout_weight=".90"/>

            <com.example.privatelyurs.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:textSize="@dimen/_12sdp"
                android:layout_weight=".10"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.example.privatelyurs.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="@dimen/_12sdp"
                android:layout_weight=".90"/>

            <com.example.privatelyurs.ui.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1266.25"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_weight=".10"/>

        </LinearLayout>

    </LinearLayout>

    <com.example.privatelyurs.ui.customview.CustomTextview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="Paid By Debit Card"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:background="@color/white"
        android:textColor="@color/black"/>

</LinearLayout>

</layout>